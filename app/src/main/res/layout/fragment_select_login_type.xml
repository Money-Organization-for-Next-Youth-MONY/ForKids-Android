<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.user.SelectLoginTypeFragment">

    <TextView
        android:id="@+id/tv_logintype_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Kids"
        android:fontFamily="@font/notosans_bold"
        android:textSize="36sp"
        android:textColor="@color/grayscale_1100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z/알파 세대를 위한 용돈 기반 금융 교육 플랫폼"
        app:layout_constraintTop_toBottomOf="@+id/tv_logintype_title"
        app:layout_constraintStart_toStartOf="@+id/tv_logintype_title"
        android:textSize="12sp"
        android:textColor="@color/grayscale_1000"
        />

    <ImageView
        android:id="@+id/iv_login_type"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_logintype_title"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/forkids"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_goto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_login_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="6dp">

        <Button
            android:id="@+id/btn_goto_login"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="간편 비밀번호 로그인"
            android:fontFamily="@font/notosans_bold"
            android:background="@drawable/border2"
            android:textColor="@color/grayscale_1100"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_goto_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_goto_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="6dp">

        <Button
            android:id="@+id/btn_goto_signup"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="간편 회원가입"
            android:fontFamily="@font/notosans_bold"
            android:background="@drawable/border2"
            android:textColor="@color/grayscale_1100"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>