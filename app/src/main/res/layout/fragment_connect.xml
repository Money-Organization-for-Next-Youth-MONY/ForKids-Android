<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.home.connect.ConnectFragment">

    <include
        layout="@layout/toolbar_connect"/>
    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:id="@+id/tv_connect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자녀의 이름"
        android:textSize="14sp"
        android:textColor="@color/grayscale_1000"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_character"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_connect_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:hint="자녀의 이름"
        />

    <TextView
        android:id="@+id/tv_connect_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자녀의 생일"
        android:textSize="14sp"
        android:textColor="@color/grayscale_1000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_connect_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_connect_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_birthday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:hint="1999-01-01 형태로 입"
        />

    <TextView
        android:id="@+id/tv_connect_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자녀의 휴대폰 번호"
        android:textSize="14sp"
        android:textColor="@color/grayscale_1000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@+id/et_connect_birthday"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/et_connect_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_connect_phone"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:hint="없다면 공란"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:cardCornerRadius="6dp"
        android:layout_marginBottom="30dp"
        app:cardBackgroundColor="@color/nh_green"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/grayscale_100_white"
            android:textSize="18sp"
            android:fontFamily="@font/notosans_bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="저장"/>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>